%h1 Listing teams

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - teams.each do |team|
      %tr
        %td= team.name
        %td= link_to 'Show', team, class: 'btn btn-default'
        %td= link_to 'Edit', edit_team_path(team), class: 'btn btn-primary'
        %td= link_to 'Destroy', team, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Team', new_team_path, class: 'btn btn-success'
